<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pl.aetas.android.smscode" android:versionCode="6" android:versionName="2.0-SNAPSHOT">

    <uses-sdk android:minSdkVersion="8"
              android:targetSdkVersion="17"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:allowBackup="true">
        <activity android:name=".activity.PreferencesActivity" android:label="@string/Preferences">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.AboutActivity" android:label="About SMSCodeReader"/>
        <activity android:name=".activity.SMSCodeReceivedAlertActivity"/>
        <receiver android:name=".receivers.SMSReceiver">
            <intent-filter android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>

